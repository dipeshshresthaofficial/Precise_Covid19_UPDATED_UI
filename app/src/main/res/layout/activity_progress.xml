<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Progress"
    android:layout_gravity="center"
    android:padding="10dp"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"
            android:text="Ordered."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:drawableLeft="@drawable/ic_check_box_black_24dp"
            android:layout_marginLeft="30dp"
            android:text="Packed."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:drawableLeft="@drawable/ic_local_shipping_black_24dp"
            android:layout_marginLeft="40dp"
            android:text="Shipped."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:drawableLeft="@drawable/ic_directions_bus_black_24dp"
            android:layout_marginLeft="40dp"
            android:text="Delivered."/>

    </LinearLayout>
</LinearLayout>