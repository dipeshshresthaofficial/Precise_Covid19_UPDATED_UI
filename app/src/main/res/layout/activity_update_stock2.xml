<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateStockActivity2"
    android:background="#e3dfcf">


    <TextView
        android:id="@+id/qtyLabel"
        android:layout_width="334dp"
        android:layout_height="55dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/cust_btn"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:text="Remaining Qty: 25"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/enterQty"
        android:layout_width="268dp"
        android:layout_height="41dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/custom_label"
        android:ems="10"

        android:hint="Enter the quantity..."
        android:inputType="textPersonName"

        android:paddingLeft="25px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qtyLabel" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterQty">


        <Button
            android:id="@+id/subBtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="-"
            tools:layout_editor_absoluteX="91dp"
            android:textColor="#fff"
            android:textSize="40dp"

            android:background="@drawable/custom_btn_round"
            tools:layout_editor_absoluteY="285dp"
            android:onClick="subBtnClicked"
            />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="+"
            android:layout_marginLeft="50dp"
            android:background="@drawable/custom_btn_round"
            android:textColor="#fff"
            android:textSize="40dp"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="285dp"
            android:onClick="addBtnClicked"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>